<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarLogin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/tituloLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:padding="25dp"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/lemaLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarLogin"
        android:text="Tu aprendizaje de idiomas a tu ritmo en tu ciudad"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@color/letraOscura"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/logoLogin"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_below="@id/lemaLogin"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@null"
        android:layout_margin="20dp"
        tools:srcCompat="@drawable/pepitoEmpresario" />
    <EditText
        android:id="@+id/editTextUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:hint="Usuario"
        android:textColorHint="@color/morado"
        android:textSize="20sp"
        android:background="@drawable/rounded"
        android:elevation="12dp"/>
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUsuario"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:hint="Contraseña"
        android:textSize="20sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="60dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:text="Iniciar Sesión"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"

        />

    <TextView
        android:id="@+id/noCuentaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes cuenta?"
        android:textColor="@color/letraOscura"
        android:layout_marginVertical="10dp"
        android:layout_below="@id/buttonLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/buttonRegistrateLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_below="@id/noCuentaText"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="Registrate Ahora"
        android:textSize="15sp"
        android:layout_marginHorizontal="90dp"
        android:textStyle="bold"
        android:textColor="@color/letraOscura"
        android:backgroundTint="@color/white"/>


</RelativeLayout>