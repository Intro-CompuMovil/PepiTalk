<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarVerOferta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"/>

    <TextView
        android:id="@+id/tituloOferta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Oferta"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/butInicio"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@null"
        app:srcCompat="@drawable/icons8_casa_40"
        android:paddingLeft="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/butPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/m2"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Una Oferta!"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbarVerOferta"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/letraOscura"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:id="@+id/idiomaOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textOferta"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textIdiomaOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/idiomaOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fechaOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idiomaOferta"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textFechaOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/fechaOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/08/2024"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/horaInicioOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fechaOferta"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textHoraInicioOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting Hour: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/horaInicioOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:30 pm"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/horaFinOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horaInicioOferta"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textHoraFinOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finishing Hour: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/horaFinOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30 pm"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lugarOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horaFinOferta"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textLugarOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/lugarOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Universidad Javeriana"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descripcionOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lugarOferta"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textDescripcionOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/descripcionOfe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An all around tour of this college"
            android:textColor="@color/letraOscura"
            android:textSize="18sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/pepitoEmpresario"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/descripcionOferta"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/pepitoempresario" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar Oferta"
        android:layout_below="@id/pepitoEmpresario"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguir Ruta"
        android:layout_below="@id/pepitoEmpresario"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnCancelarContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar Contrato"
        android:layout_below="@id/btnRuta"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnCalificarTraductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificar Traductor"
        android:layout_below="@id/pepitoEmpresario"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnActualizarContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Contrato"
        android:layout_below="@id/btnCalificarTraductor"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnEliminarContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Contrato"
        android:layout_below="@id/btnActualizarContrato"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnAceptarTraductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revisar Traductor"
        android:layout_below="@id/pepitoEmpresario"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"
        android:visibility="gone"/>

</RelativeLayout>