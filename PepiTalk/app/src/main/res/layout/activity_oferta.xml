<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarMenuOferta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/TituloOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Ofertas"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textColor="@color/blanco"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/textSeleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una Opcion"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbarMenuOferta"
        android:layout_marginTop="45dp"
        android:textColor="@color/morado"/>




    <Button
        android:id="@+id/buttonVerOfertas"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/textSeleccionar"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="Ver mis Ofertas"
        android:backgroundTint="@color/rosa"
        android:textColor="@color/morado"/>

    <Button
        android:id="@+id/buttonCrearOfertas"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="Crear Oferta"
        android:backgroundTint="@color/rosa"
        android:textColor="@color/morado"/>


</RelativeLayout>