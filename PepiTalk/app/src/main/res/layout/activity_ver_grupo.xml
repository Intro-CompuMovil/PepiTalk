<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarVerGrupo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>

    <TextView
        android:id="@+id/tituloVerGrupo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Grupo"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/butInicio"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@null"
        app:srcCompat="@drawable/icons8_casa_40"
        android:paddingLeft="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/butPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/m2"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilingual"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbarVerGrupo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/letraOscura"
        android:paddingTop="50dp"
        android:paddingBottom="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/imagenGrupo1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nombre"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/imagenGrupo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/grupo"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/idiomaGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenGrupo1"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textIdioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idioma: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textNomIdioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Ingles"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nivelGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idiomaGrupo"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel minimo recomendado: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textNomNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" B1"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nivelGrupo"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textDescri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" We learn better together!"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnUnirse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unirse al grupo"
        android:layout_below="@id/descripcion"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/descripcion"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/btnVerReuniones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Reuniones"
            android:textColor="@color/morado"
            android:backgroundTint="@color/rosa"/>

        <Button
            android:id="@+id/btnCrearReunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Reunion"
            android:textColor="@color/morado"
            android:backgroundTint="@color/rosa"/>

        <Button
            android:id="@+id/btnCalificarGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificar Grupo"
            android:textColor="@color/morado"
            android:backgroundTint="@color/rosa"/>

        <Button
            android:id="@+id/btnSalirGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir del Grupo"
            android:textColor="@color/morado"
            android:backgroundTint="@color/rosa"/>
    </LinearLayout>

</RelativeLayout>