<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAceptarTraductor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar Traductor"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        />
    <ImageButton
        android:id="@+id/butInicio"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@null"
        app:srcCompat="@drawable/icons8_casa_40"
        android:paddingLeft="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/butPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/m2"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/NombreTraductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: Placement"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbarAceptarTraductor"
        android:layout_marginTop="30dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/CalificacionTraductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificacion: la fldsmdbr "
        android:layout_centerHorizontal="true"
        android:layout_below="@id/NombreTraductor"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="218dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_below="@id/CalificacionTraductor"/>

    <Button
        android:id="@+id/buttonAceptar"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Aceptar"
        android:backgroundTint="@color/rosa"
        android:textColor="@color/morado"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/buttonRechazar"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:text="Rechazar"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/rosa"
        android:textColor="@color/morado"
        android:layout_below="@id/buttonAceptar"
        android:textSize="18sp"/>

</RelativeLayout>