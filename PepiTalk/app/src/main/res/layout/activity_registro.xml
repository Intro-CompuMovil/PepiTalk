<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarRegistro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/tituloRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:padding="25dp"
        android:text="Registrate"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRegistro"
        android:text="Diligencia toda la información solicitada:"
        android:textSize="20sp"
        android:layout_margin="0dp"
        android:textAlignment="center"
        android:textColor="@color/letraOscura"
        android:padding="20dp"/>
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/infoText"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@null"
        app:srcCompat="@drawable/grupo"
        />
    <TextView
        android:id="@+id/imageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton"
        android:text="Haga click en la imagen para cambiar la foto"
        android:textSize="15sp"
        android:layout_margin="0dp"
        android:textAlignment="center"
        android:textColor="@color/letraOscura"
        android:padding="2dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageText"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/rounded"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:padding="14dp"
        android:entries="@array/tipos"
        />

    <EditText
        android:id="@+id/editTextNombreRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Nombre"
        android:textColorHint="@color/morado"
        android:textSize="18sp"
        android:background="@drawable/rounded"
        />

    <EditText
        android:id="@+id/editTextUsuarioRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNombreRegistro"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Usuario"
        android:textColorHint="@color/morado"
        android:textSize="18sp"
        android:background="@drawable/rounded"
    />
    <EditText
        android:id="@+id/editTextPasswordRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUsuarioRegistro"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Contraseña"
        android:textSize="18sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/editTextConfirmarPasswordRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPasswordRegistro"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Confirmar Contraseña"
        android:textSize="18sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/editTextCorreoRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextConfirmarPasswordRegistro"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Correo"
        android:textSize="18sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        />

    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="60dp"
        android:padding="15dp"
        android:textSize="18sp"
        android:text="Registrarse"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        />




</RelativeLayout>