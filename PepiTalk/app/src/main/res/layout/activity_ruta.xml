<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarRuta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/TituloRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        />

    <ImageButton
        android:id="@+id/butInicio"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@null"
        app:srcCompat="@drawable/icons8_casa_40"
        android:paddingLeft="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/butPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/m2"/>
    </androidx.cardview.widget.CardView>

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="322dp"
        android:layout_height="435dp"
        android:layout_below="@id/toolbarRuta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
         />

    <Button
        android:id="@+id/btnDevolverReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a la reuniÃ³n"
        android:layout_below="@id/map"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="18sp"
        android:layout_marginTop="30dp"/>




</RelativeLayout>