<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarActualizarReunion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/tituloActualizarReunion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:padding="25dp"
        android:text="Actualizar Reunion"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/infoText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarActualizarReunion"
        android:text="Diligencia toda la información solicitada:"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/letraOscura"
        android:padding="25dp"/>



    <EditText
        android:id="@+id/editTextDiaReunionAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoText6"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:hint="Dia: DD/MM/AAAA"
        android:textColorHint="@color/morado"
        android:textSize="24sp"
        android:background="@drawable/rounded"
        android:elevation="12dp"/>
    <EditText
        android:id="@+id/editTextHoraReunionAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDiaReunionAct"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:hint="Hora: HH:MM"
        android:textColorHint="@color/morado"
        android:textSize="24sp"
        android:background="@drawable/rounded"
        android:elevation="12dp"/>


    <EditText
        android:id="@+id/editTextNivelReunionAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextHoraReunionAct"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:hint="Nivel recomendado"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />
    <EditText
        android:id="@+id/editTextLugarReunionAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNivelReunionAct"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:hint="Lugar"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />
    <EditText
        android:id="@+id/editTextDescripcionReunionAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLugarReunionAct"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:hint="Descripción"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />

    <Button
        android:id="@+id/buttonActualizarReunion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="60dp"
        android:padding="15dp"
        android:textSize="24sp"
        android:text="Crear"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:elevation="12dp"
        />





</RelativeLayout>