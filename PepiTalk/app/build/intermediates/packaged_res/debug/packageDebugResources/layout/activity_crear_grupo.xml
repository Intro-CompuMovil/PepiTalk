<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarCrearGrupo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/tituloCrearGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:padding="25dp"
        android:text="Crear Grupo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/infoText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarCrearGrupo"
        android:text="Diligencia toda la información solicitada:"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="@color/letraOscura"
        android:padding="25dp"/>




    <EditText
        android:id="@+id/editTextNombreGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Nombre"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />

    <EditText
        android:id="@+id/editTextIdiomaGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNombreGrupo"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Idioma"
        android:textColorHint="@color/morado"
        android:textSize="24sp"
        android:background="@drawable/rounded"
        android:elevation="12dp"/>

    <EditText
        android:id="@+id/editTextNivelGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextIdiomaGrupo"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Nivel recomendado"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />
    <EditText
        android:id="@+id/editTextLugarGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNivelGrupo"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Lugar"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />
    <EditText
        android:id="@+id/editTextDescripcionGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextLugarGrupo"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Descripción"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />

    <Button
        android:id="@+id/buttonCrearGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="60dp"
        android:padding="15dp"
        android:textSize="24sp"
        android:text="Crear"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:elevation="12dp"
        />





</RelativeLayout>