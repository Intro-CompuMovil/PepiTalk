<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarVerReunion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>

    <TextView
        android:id="@+id/tituloVerReunion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="ReuniÃ³n"
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/butInicio"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@null"
        app:srcCompat="@drawable/icons8_casa_40"
        android:paddingLeft="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/butPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/m2"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parchemos en portugues"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbarVerReunion"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/letraOscura"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/imagenReunion1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nombre"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/imagenReunion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/grupo"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/diaReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenReunion1"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 15/08/2024"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/horaReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diaReunion"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3:30 pm"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idiomaReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horaReunion"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textIdioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idioma: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/idioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Portugues"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nivelReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idiomaReunion"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel minimo recomendado: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/nivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" B1"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lugarReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nivelReunion"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Universidad Javeriana"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descripcionReunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lugarReunion"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion: "
            android:textStyle="bold"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" We learn better together!"
            android:textColor="@color/letraOscura"
            android:textSize="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnUnirse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unirse a la Reunion"
        android:layout_below="@id/descripcionReunion"
        android:layout_centerHorizontal="true"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:textSize="15dp"/>

    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/descripcionReunion"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/btnRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguir Ruta"
            android:textColor="@color/morado"
            android:backgroundTint="@color/rosa"/>

        <Button
            android:id="@+id/btnCalificarReunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificar Reunion"
            android:textColor="@color/morado"
            android:backgroundTint="@color/rosa"/>

        <Button
            android:id="@+id/btnSalirReunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir de Reunion"
            android:textColor="@color/morado"
            android:backgroundTint="@color/rosa"/>

    </LinearLayout>

</RelativeLayout>