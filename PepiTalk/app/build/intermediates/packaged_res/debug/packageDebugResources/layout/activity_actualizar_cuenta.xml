<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarActualizar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/azulOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/tituloActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:padding="25dp"
        android:text="Actualizar Usuario"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/infoText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarActualizar"
        android:text="Diligencia toda la informaci칩n solicitada:"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="@color/letraOscura"
        android:padding="25dp"/>


    <EditText
        android:id="@+id/editTextUsuarioActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Usuario"
        android:textColorHint="@color/morado"
        android:textSize="24sp"
        android:background="@drawable/rounded"
        android:elevation="12dp"/>
    <EditText
        android:id="@+id/editTextPasswordActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUsuarioActualizar"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Contrase침a"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />
    <EditText
        android:id="@+id/editTextConfirmarPasswordActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPasswordActualizar"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Confirmar Contrase침a"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />
    <EditText
        android:id="@+id/editTextPasswordAnterior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextConfirmarPasswordActualizar"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:hint="Contrase침a Anterior"
        android:textSize="24sp"
        android:textColorHint="@color/morado"
        android:background="@drawable/rounded"
        android:elevation="12dp"
        />

    <Button
        android:id="@+id/buttonActualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="60dp"
        android:padding="15dp"
        android:textSize="24sp"
        android:text="Actualizar"
        android:textColor="@color/morado"
        android:backgroundTint="@color/rosa"
        android:elevation="12dp"
        />





</RelativeLayout>